{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git: Commit (all)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoLogo",
        "-NoProfile",
        "-File",
        "scripts/git-commit.ps1",
        "-All",
        "-Message",
        "${input:commitMessage}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Git: Push",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoLogo",
        "-NoProfile",
        "-File",
        "scripts/git-push.ps1"
      ],
      "problemMatcher": []
    },
    {
      "label": "Git: Commit + Push",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoLogo",
        "-NoProfile",
        "-File",
        "scripts/git-commit-push.ps1",
        "-All",
        "-Message",
        "${input:commitMessage}"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Commit message",
      "default": "chore: update"
    }
  ]
}
